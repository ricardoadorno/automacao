{
  "metadata": {
    "feature": "demo-jsonplaceholder-sqlite-search",
    "ticket": "DEMO-JPS-1",
    "env": "local"
  },
  "behaviorsPath": "examples/jsonplaceholder-sqlite/behaviors.json",
  "openapiPath": "examples/jsonplaceholder/openapi.json",
  "steps": [
    {
      "id": "http-get-todo",
      "type": "swagger",
      "behaviorId": "swagger-jsonplaceholder",
      "config": {
        "operationId": "getTodoById",
        "responseSelector": "body"
      },
      "exports": {
        "todoId": {
          "source": "responseText",
          "jsonPath": "id"
        },
        "todoTitle": {
          "source": "responseText",
          "jsonPath": "title"
        }
      }
    },
    {
      "id": "sqlite-select",
      "type": "sqlEvidence",
      "config": {
        "sql": {
          "adapter": "sqlite",
          "dbPath": "examples/jsonplaceholder-sqlite/jsonplaceholder.db",
          "query": "select id, title, completed from todos where id = {todoId} and title = '{todoTitle}'",
          "expectRows": 1
        }
      },
      "exports": {
        "todoTitleSql": {
          "source": "sql",
          "column": "title"
        }
      }
    },
    {
      "id": "search",
      "type": "browser",
      "behaviorId": "search-with-title",
      "requires": [
        "todoTitleSql"
      ]
    }
  ]
}
