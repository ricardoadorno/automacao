{
  "metadata": {
    "feature": "demo-sqlite-chain",
    "ticket": "SQLITE-1",
    "env": "local"
  },
  "behaviorsPath": "examples/sqlite/behaviors.json",
  "curlPath": "examples/sqlite/get-todo.curl",
  "steps": [
    {
      "id": "api-get-todo",
      "type": "api",
      "exports": {
        "todoId": {
          "source": "responseData",
          "jsonPath": "id"
        }
      }
    },
    {
      "id": "sql",
      "type": "sqlEvidence",
      "config": {
        "sql": {
          "adapter": "sqlite",
          "dbPath": "examples/sqlite/demo.db",
          "query": "select id, title, run_date from todos where id = {todoId}",
          "expectRows": 1
        }
      }
    },
    {
      "id": "browser-date-filter",
      "type": "browser",
      "behaviorId": "browser-date-filter",
      "requires": [
        "startedAt"
      ],
      "config": {
        "retries": 1,
        "retryDelayMs": 500
      }
    }
  ]
}
