{
  "metadata": {
    "feature": "demo-sqlite-chain",
    "ticket": "SQLITE-1",
    "env": "local"
  },
  "behaviorsPath": "examples/sqlite/behaviors.json",
  "openapiPath": "examples/sqlite/openapi.json",
  "steps": [
    {
      "id": "swagger-get",
      "type": "swagger",
      "behaviorId": "swagger-jsonplaceholder",
      "config": {
        "operationId": "getTodoById",
        "responseSelector": "body"
      },
      "exports": {
        "todoId": {
          "source": "responseText",
          "jsonPath": "id"
        }
      }
    },
    {
      "id": "sql",
      "type": "sqlEvidence",
      "config": {
        "sql": {
          "adapter": "sqlite",
          "dbPath": "examples/sqlite/demo.db",
          "query": "select id, title, run_date from todos where id = {todoId}",
          "expectRows": 1
        }
      }
    },
    {
      "id": "cloudwatch",
      "type": "cloudwatch",
      "behaviorId": "cloudwatch-date-filter",
      "requires": [
        "startedAt"
      ],
      "config": {
        "retries": 1,
        "retryDelayMs": 500
      }
    }
  ]
}
