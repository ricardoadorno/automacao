{
  "metadata": {
    "feature": "order-sql-post-cloudwatch",
    "ticket": "ORDER-1",
    "env": "local"
  },
  "behaviorsPath": "examples/order/behaviors.json",
  "openapiPath": "examples/order/openapi.json",
  "steps": [
    {
      "id": "sql",
      "type": "sqlEvidence",
      "config": {
        "sql": {
          "queryPath": "examples/order/sql/query.sql",
          "resultPath": "examples/order/sql/result.csv",
          "expectRows": 1
        }
      },
      "exports": {
        "pedidoId": {
          "source": "sql",
          "column": "id"
        }
      }
    },
    {
      "id": "swagger-post",
      "type": "swagger",
      "behaviorId": "swagger-post",
      "config": {
        "operationId": "addPet"
      }
    },
    {
      "id": "cloudwatch",
      "type": "cloudwatch",
      "behaviorId": "cloudwatch-filter",
      "requires": [
        "pedidoId"
      ],
      "config": {
        "retries": 1,
        "retryDelayMs": 500
      }
    }
  ]
}
